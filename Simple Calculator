#include<iostream>
using namespace std;
int main() 
{
	int a,b,add,sub,mul,divd,ch;
	cout<<"Enter the first number:";
	cin>>a;
	cout<<"Enter the second number:";
	cin>>b;
	cout<<"\nEnter 1 for Addition";
	cout<<"\nEnter 2 for Substraction";
	cout<<"\nEnter 3 for Multiplication";
	cout<<"\nEnter 4 for Division";
	cout<<"\nEnter your choice:";
	cin>>ch;
	switch(ch)
	{
	case 1:
		add= a+b;
		cout<<"Addition of "<<a <<" and " <<b<< " = "<<add;
		break;
	case 2:
		sub= a-b;
		cout<<"Substraction of "<<a <<" and " <<b <<" = "<<sub ;
		break;
	case 3:
		mul= a*b;
		cout<<"Multiplication of "<<a <<" and " <<b <<" = " <<mul;
		break;
	case 4:
        divd= a/b;
        cout<<"Division of "<<a <<" and " <<b <<" = "<< divd ;
        break;
    default:
        cout<<"Invalid Choice" ;     
	}
}
